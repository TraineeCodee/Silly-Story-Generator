// Array of story templates
const storyTemplates = [
    "Once upon a time, {name} went to {place} carrying a {object}. It was the beginning of a very strange day.",
    "In a bizarre turn of events, {name} found a {object} in {place} that turned out to be magical.",
    "{name} decided to visit {place} with a {object}. Little did they know, it would cause chaos everywhere!",
    "While exploring {place}, {name} stumbled upon a {object} that could talk. What a surprise!",
    "One fine day, {name} threw a {object} across {place} and accidentally started a world-wide trend.",
];

// Function to generate a random story
function generateStory(name, place, object) {
    const randomIndex = Math.floor(Math.random() * storyTemplates.length);
    const story = storyTemplates[randomIndex]
        .replace("{name}", name)
        .replace("{place}", place)
        .replace("{object}", object);
    return story;
}

// Event listener for the form
document.getElementById("story-form").addEventListener("submit", (e) => {
    e.preventDefault();

    const name = document.getElementById("name").value;
    const place = document.getElementById("place").value;
    const object = document.getElementById("object").value;

    const story = generateStory(name, place, object);

    const storyOutput = document.getElementById("story-output");
    storyOutput.textContent = story;
});
